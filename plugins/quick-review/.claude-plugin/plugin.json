{
  "name": "quick-review",
  "version": "0.3.1",
  "description": "Auto-triggers a quick code review after git commits",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/inject-review.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/on-bash-tool.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
